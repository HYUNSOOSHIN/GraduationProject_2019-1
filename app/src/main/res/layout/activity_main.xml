<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/id_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_face"
                android:layout_width="match_parent"
                android:layout_height="462dp"
                android:scaleType="fitCenter" />

            <RelativeLayout
                android:id="@+id/rl_001"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:id="@+id/sidebar_btn"
                    android:layout_width="24dp"
                    android:layout_height="19dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="22dp"
                    android:background="@drawable/menu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="서울특별시 송파구 석촌동"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/main_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="월요일 AM 11:00"
                        android:textColor="#000000"
                        android:textSize="11sp" />


                </LinearLayout>

                <ImageButton
                    android:id="@+id/searchView_btn"
                    android:layout_width="19.3dp"
                    android:layout_height="28.7dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="21.7dp"
                    android:background="@drawable/location" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="292dp"
                android:layout_below="@id/rl_001" />

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="19dp"
                android:orientation="horizontal"
                android:layout_above="@+id/mise"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15.7dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothic"
                    android:textAlignment="center"
                    android:text="통합대기지수 "
                    android:textSize="17sp"
                    android:textColor="#191919"/>

                <TextView
                    android:id="@+id/total_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:textAlignment="center"
                    android:text="70"
                    android:textSize="17sp"
                    android:textColor="#191919"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="미세먼지 "
                            android:textColor="#000000"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/main_pm10_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/nanumbarungothicbold"
                            android:text="매우 좋음"
                            android:textColor="#159123"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/main_pm10_value"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="11.7dp"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:gravity="center"
                        android:text="182 ㎍/㎥"
                        android:textColor="#159123"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/nanumbarungothic"
                            android:text="초미세먼지 "
                            android:textColor="#000000"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/main_pm25_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/nanumbarungothicbold"
                            android:text="매우 좋음"
                            android:textColor="#159123"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/main_pm25_value"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="11.7dp"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:gravity="center"
                        android:text="132 ㎍/㎥"
                        android:textColor="#159123"
                        android:textSize="30sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_below="@id/mise"
                android:layout_marginTop="10dp"
                android:background="#f7f7f7" />

            <LinearLayout
                android:id="@+id/todaytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mise"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="오늘 날씨"
                    android:textColor="#292929"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="오늘 날짜"
                    android:textColor="#727272"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text=" | 기상청"
                    android:textColor="#727272"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text=" | 에어코리아"
                    android:textColor="#727272"
                    android:textSize="12sp" />
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/today_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/todaytext"
                android:layout_marginTop="26dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/todaytext"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumbarungothicbold"
                                android:text="날씨"
                                android:textColor="#3b3b3b"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/main_weather"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/nanumbarungothic"
                                android:text="구름 조금"
                                android:textColor="#3b3b3b"
                                android:textSize="25sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="21dp"
                            android:background="#d8d8d8" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumbarungothicbold"
                                android:text="온도"
                                android:textColor="#3b3b3b"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/main_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/nanumbarungothic"
                                android:text="21.0°C"
                                android:textColor="#3b3b3b"
                                android:textSize="25sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="21dp"
                            android:background="#d8d8d8" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumbarungothicbold"
                                android:text="강수확률"
                                android:textColor="#3b3b3b"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/main_rain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/nanumbarungothic"
                                android:text="50%"
                                android:textColor="#3b3b3b"
                                android:textSize="25sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="48dp"
                            android:layout_marginHorizontal="21dp"
                            android:background="#d8d8d8" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="22dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumbarungothicbold"
                                android:text="습도"
                                android:textColor="#3b3b3b"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/main_reh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/nanumbarungothic"
                                android:text="50%"
                                android:textColor="#3b3b3b"
                                android:textSize="25sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_below="@id/today_weather"
                android:layout_marginTop="18dp"
                android:background="#f7f7f7" />

            <LinearLayout
                android:id="@+id/week_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/today_weather"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="주간 날씨 정보"
                    android:textColor="#292929"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/day1"
                        android:layout_width="120dp"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:gravity="center"
                        android:onClick="whatday"
                        android:text="오늘"
                        android:textColor="#3a3a3a"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/day2"
                        android:layout_width="120dp"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:gravity="center"
                        android:onClick="whatday"
                        android:background="#fafafa"
                        android:text="내일"
                        android:textColor="#818181"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/day3"
                        android:layout_width="120dp"
                        android:layout_height="31dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:gravity="center"
                        android:onClick="whatday"
                        android:background="#fafafa"
                        android:text="모레"
                        android:textColor="#818181"
                        android:textSize="16sp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/main_recycleView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="19dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_below="@id/week_weather"
                android:layout_marginTop="22dp"
                android:background="#f7f7f7" />

            <LinearLayout
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/week_weather"
                android:layout_marginTop="46dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="미세먼지 수치에 따른 건강관리 및 행동요령"
                    android:textColor="#292929"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="미세먼지 "
                        android:textColor="#3a3a3a"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/main_pm10_status2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/nanumbarungothicbold"
                        android:text="매우 좋음"
                        android:textColor="#159123"
                        android:textSize="15sp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/mark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="1.5dp">

                    <ImageView
                        android:id="@+id/mark_img"
                        android:layout_width="28dp"
                        android:layout_height="22dp"
                        android:src="@drawable/good" />

                    <TextView
                        android:id="@+id/mark_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/mark_img"
                        android:layout_alignTop="@id/mark_img"
                        android:layout_alignRight="@id/mark_img"
                        android:layout_alignBottom="@id/mark_img"
                        android:layout_marginBottom="8.5dp"
                        android:gravity="center"
                        android:text="오류"
                        android:textColor="#ffffff"
                        android:textSize="11sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="77dp"
                        android:layout_height="3dp"
                        android:background="#77efff" />

                    <View
                        android:layout_width="77dp"
                        android:layout_height="3dp"
                        android:background="#67adff" />

                    <View
                        android:layout_width="77dp"
                        android:layout_height="3dp"
                        android:background="#ffc424" />

                    <View
                        android:layout_width="77dp"
                        android:layout_height="3dp"
                        android:background="#b70000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="66dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="0"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="62dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="30"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="80"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="51dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="150~"
                        android:textSize="12sp" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/main_recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="21dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_below="@id/list"
                android:layout_marginTop="23dp"
                android:background="#f7f7f7" />

            <LinearLayout
                android:id="@+id/action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/list"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="36dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="생활 속 미세먼지를 줄이고 건강을 지킵시다"
                    android:textColor="#292929"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="어떻게 일상 속 미세먼지를 줄일 수 있을까요? 많은 사람들이 실천하고 있습니다. 함께 실천해 보세요."
                    android:textColor="#5c5c5c"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/nextView_btn"
                    android:layout_width="91dp"
                    android:layout_height="28dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/learn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="58dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="앱 버전 v1.0"
                    android:textColor="#8c8c8c"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="41dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="서울하늘"
                    android:textColor="#8c8c8c"
                    android:textSize="10sp" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fl_silde"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.75"
            android:background="#202735" />

        <FrameLayout
            android:id="@+id/view_sildebar"
            android:layout_width="300dp"
            android:layout_height="match_parent" />
    </FrameLayout>

</RelativeLayout>
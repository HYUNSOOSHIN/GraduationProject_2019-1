<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/id_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/main_face"
                android:layout_width="match_parent"
                android:layout_height="462dp"
                android:background="@drawable/temp"
                android:scaleType="fitCenter" />

            <RelativeLayout
                android:id="@+id/rl_001"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="9dp">

                <ImageButton
                    android:id="@+id/sidebar_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_menu_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/main_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="서울특별시 송파구 석촌동"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/main_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="월요일 AM 11:00"
                        android:textColor="#000000"
                        android:textSize="11sp" />


                </LinearLayout>

                <ImageButton
                    android:id="@+id/searchView_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_location_on_black_24dp" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="292dp"
                android:layout_below="@id/rl_001" />

            <LinearLayout
                android:id="@+id/mise"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_below="@id/view"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="미세먼지 "
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/main_pm10_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="매우 좋음"
                            android:textColor="#159123"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/main_pm10_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="182 ㎍/㎥"
                        android:textColor="#159123"
                        android:textSize="34sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="초미세먼지 "
                            android:textColor="#000000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/main_pm25_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="매우 좋음"
                            android:textColor="#159123"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/main_pm25_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="132 ㎍/㎥"
                        android:textColor="#159123"
                        android:textSize="34sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/today_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mise"
                android:layout_marginTop="46dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="오늘 날씨 "
                        android:textColor="#292929"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/today"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="오늘 날짜"
                        android:textColor="#dddddd"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" | 기상청"
                        android:textColor="#dddddd"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" | 에어코리아"
                        android:textColor="#dddddd"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="날씨"
                            android:textColor="#555555"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/main_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="구름 조금"
                            android:textColor="#555555"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="온도"
                            android:textColor="#555555"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/main_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21°C"
                            android:textColor="#555555"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="강수확률"
                            android:textColor="#555555"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/main_rain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textColor="#555555"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="습도"
                            android:textColor="#555555"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/main_reh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textColor="#555555"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/week_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/today_weather"
                android:layout_marginTop="31dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:text="주간 날씨 정보"
                    android:textColor="#292929"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/day1"
                        android:layout_width="120dp"
                        android:layout_height="26dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="whatday"
                        android:text="오늘"
                        android:textColor="#3a3a3a"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/day2"
                        android:layout_width="120dp"
                        android:layout_height="26dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="whatday"
                        android:text="내일"
                        android:textColor="#818181"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/day3"
                        android:layout_width="120dp"
                        android:layout_height="26dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick="whatday"
                        android:text="모레"
                        android:textColor="#818181"
                        android:textSize="20dp" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="19dp"
                    android:scrollbars="none">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/main_recycleView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/week_weather"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="46dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="미세먼지 수치에 따른 건강관리 및 행동요령"
                    android:textColor="#292929"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="미세먼지 "
                        android:textColor="#3a3a3a"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/main_pm10_status2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 좋음"
                        android:textColor="#159123"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/main_pm10_value2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:text="0~50"
                        android:textColor="#3a3a3a"
                        android:textSize="15sp" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/main_recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="36dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/leftbtn"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/ic_keyboard_arrow_left_black_24dp" />

                    <TextView
                        android:id="@+id/pagetext"
                        android:layout_width="21dp"
                        android:layout_height="27dp"
                        android:gravity="center"
                        android:text="1/2"
                        android:textSize="12sp" />

                    <ImageButton
                        android:id="@+id/rightbtn"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/list"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="36dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="생활 속 미세먼지를 줄이고 건강을 지킵시다"
                    android:textColor="#292929"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="어떻게 일상 속 미세먼지를 줄일 수 있을까요? 많은 사람들이 실천하고 있습니다. 함께 실천해 보세요."
                    android:textColor="#5c5c5c"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/nextView_btn"
                    android:layout_width="91dp"
                    android:layout_height="28dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/border_squar"
                    android:text="더 알아보기 >"
                    android:textColor="#646464"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="58dp"
                    android:text="앱 버전 v1.0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="112dp"
                    android:text="서울하늘" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fl_silde"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.75"
            android:background="#202735" />

        <FrameLayout
            android:id="@+id/view_sildebar"
            android:layout_width="300dp"
            android:layout_height="match_parent" />
    </FrameLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/searchView_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_location_on_black_24dp"
                    tools:ignore="MissingConstraints" />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/main_location"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="서울특별시 송파구 석촌동"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/main_time"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월요일 AM 11:00"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--
                    <Button
                        android:id="@+id/gps_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_android_black_24dp"
                        tools:ignore="MissingConstraints" />
                        -->
                    <TextView
                        android:id="@+id/tv_logitude"
                        android:text="defort setting1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_latitude"
                        android:text="defort setting2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_location"
                        android:text="defort setting3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_weather"
                        android:text="defort setting4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/main_face"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:src="@drawable/tmp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_gravity="center"
                        android:text="미세먼지 매우 나쁨"
                        android:id="@+id/main_pm10_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/main_pm10_text2"
                        android:text="182"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_gravity="center"
                        android:text="초미세먼지 매우 나쁨"
                        android:id="@+id/main_pm25_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center"
                        android:text="132"
                        android:id="@+id/main_pm25_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="#000000">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/main_pm10_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/tmp" />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="미세먼지"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:id="@+id/main_pm10_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="미세먼지"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textColor="#fff"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/main_pm25_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/tmp" />
                        <TextView
                            android:id="@+id/weather_temp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="초미세먼지"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:id="@+id/main_pm25_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="초미세먼지"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textColor="#fff"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/main_o3_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/tmp" />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="오존"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:id="@+id/main_o3_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="오존"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textColor="#fff"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/main_no2_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/tmp" />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="이산화질소"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:id="@+id/main_no2_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="이산화질소"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textColor="#fff"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/main_co_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/tmp" />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="일산화탄소"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:id="@+id/main_co_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="일산화탄소"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textColor="#fff"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/main_so2_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/tmp" />
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="아황산가스"
                            android:textAlignment="center"
                            android:textSize="15dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:id="@+id/main_so2_text"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="아황산가스"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:textColor="#fff"/>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="주간 날씨 정보"
                    android:textSize="25dp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="월요일"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="화요일"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="수요일"
                            android:textSize="20dp" />
                    </LinearLayout>
                </HorizontalScrollView>

                <View
                    android:layout_width="350dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/radius_border">
                </View>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="미세먼지 수치에 따른 건강관리"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="미세먼지 매우 나쁨 200~300"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/leftbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_keyboard_arrow_left_black_24dp"/>
                <TextView
                    android:id="@+id/pagetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1/2"
                    android:textSize="15dp"/>
                <ImageButton
                    android:id="@+id/rightbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_keyboard_arrow_right_black_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:text="생활 속 미세먼지를 줄입시다."
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/nextView_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_keyboard_arrow_right_black_24dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="일상 속 미세먼지를 줄일 수 있을까요? 많은 사람들이 실천하고 있습니다. 함께 실천해보세요."
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="리사이클러뷰 자리"
                    android:textColor="#000000"
                    android:textSize="30dp"
                    android:background="@drawable/radius_border"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="참여하기"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="앱 버전 v1.0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="서울하늘"/>
            </LinearLayout>
<!--

-->
            <!-- This is purpose of testing Location -->

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
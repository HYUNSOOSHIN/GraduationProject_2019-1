<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.MainActivity">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">
                </LinearLayout>
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="생활 속 미세먼지를 줄입시다!" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="일상 속 미세먼지를 줄일 수 있을까요? 많은 사람들이 실천하고 있습니다."
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/action_recycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/leftbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:onClick="leftbtn"
                    tools:ignore="OnClick" />
                <TextView
                    android:id="@+id/pagetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1/2"
                    android:textSize="15dp"/>
                <ImageButton
                    android:id="@+id/rightbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:onClick="rightbtn"
                    tools:ignore="OnClick"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="많은 사람들이 함께합니다."
                    android:layout_marginTop="20dp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:textSize="15dp"
                        android:text="함께 실천해 보세요"
                        android:textColor="#000000"
                        android:layout_marginTop="10dp"/>
                    <Button
                        android:id="@+id/apply_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:text="참여하기"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="총 이용자 기준"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="마스크 착용"
                            android:textAlignment="center"
                            android:textSize="13dp"
                            android:layout_marginBottom="5dp"/>
                        <com.github.lzyzsd.circleprogress.CircleProgress
                            android:id="@+id/circle_progress_w"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            custom:circle_progress="20" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="물 8잔"
                            android:textAlignment="center"
                            android:textSize="13dp"
                            android:layout_marginBottom="5dp"/>
                        <com.github.lzyzsd.circleprogress.CircleProgress
                            android:id="@+id/circle_progress_t"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            custom:circle_progress="30" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="나무심기"
                            android:textAlignment="center"
                            android:textSize="13dp"
                            android:layout_marginBottom="5dp"/>
                        <com.github.lzyzsd.circleprogress.CircleProgress
                            android:id="@+id/circle_progress_o"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            custom:circle_progress="40" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="자발적 차량2부제"
                            android:textAlignment="center"
                            android:textSize="13dp"
                            android:layout_marginBottom="5dp"/>
                        <com.github.lzyzsd.circleprogress.CircleProgress
                            android:id="@+id/circle_progress_e"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            custom:circle_progress="50" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 리사이클러뷰 위치-->
            <TextView
                android:layout_width="350dp"
                android:layout_height="450dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="리사이클러뷰 자리"
                android:textColor="#000000"
                android:textSize="30dp"
                android:background="@drawable/radius_border"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
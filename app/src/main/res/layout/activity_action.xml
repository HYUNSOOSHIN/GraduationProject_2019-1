<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_marginTop="35dp">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_keyboard_arrow_left_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="22dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="생활 속 미세먼지를 줄이고 건강을 지킵시다"
                    android:textColor="#3b3b3b"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:text="어떻게 일상 속 미세먼지를 줄일 수 있을까요? 많은 사람들이 실천하고 있습니다. 함께 실천해보세요."
                    android:textSize="12sp"
                    android:textColor="#707070"
                    android:lineSpacingExtra="3dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="33dp"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/action_recycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="33dp"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/leftbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:onClick="leftbtn"
                    tools:ignore="OnClick" />

                <TextView
                    android:id="@+id/pagetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1/2"
                    android:textSize="15dp" />

                <ImageButton
                    android:id="@+id/rightbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:onClick="rightbtn"
                    tools:ignore="OnClick" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="22dp"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothicbold"
                    android:text="많은 사람들이 함께합니다."
                    android:textColor="#3b3b3b"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:gravity="center|left"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="함께 실천해 보세요!"
                        android:layout_weight="1"
                        android:textColor="#707070"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/apply_btn"
                        android:layout_width="80dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:background="@drawable/border_10dp"
                        android:fontFamily="@font/nanumbarungothic"
                        android:text="참여하기"
                        android:textColor="#707070"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="마스크 착용"
                        android:textAlignment="center"
                        android:textSize="8sp" />

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:id="@+id/donut_progress_z"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        custom:donut_progress="30" />

                    <TextView
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:text="1231/10000"
                        android:textAlignment="center"
                        android:textSize="8sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="물 8잔"
                        android:textAlignment="center"
                        android:textSize="8dp" />

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:id="@+id/donut_progres_x"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        custom:donut_progress="50" />

                    <TextView
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:text="1231/10000"
                        android:textAlignment="center"
                        android:textSize="8sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="마스크 착용"
                        android:textAlignment="center"
                        android:textSize="8dp" />

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:id="@+id/donut_progress_c"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        custom:donut_progress="70" />

                    <TextView
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:text="1231/10000"
                        android:textAlignment="center"
                        android:textSize="8sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="마스크 착용"
                        android:textAlignment="center"
                        android:textSize="8dp" />

                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:id="@+id/donut_progress_v"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        custom:donut_progress="90" />

                    <TextView
                        android:layout_width="46dp"
                        android:layout_height="wrap_content"
                        android:text="1231/10000"
                        android:textAlignment="center"
                        android:textSize="8sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>
            </LinearLayout>

            <!-- 리사이클러뷰 위치-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/action_recycleView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="36dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>